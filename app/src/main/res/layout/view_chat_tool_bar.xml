<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@android:color/darker_gray" />

    <RelativeLayout
        android:id="@+id/chat_tool_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1px"
        android:background="@android:color/white"
        android:gravity="bottom"
        android:minHeight="50dp">
        <!-- RelativeLayout设置android:gravity="bottom"
            时,会把最高的View放到最底部
        -->

        <TextView
            android:id="@+id/tv_voice_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/keyboard_layout"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@null"
            android:button="@null"
            android:drawableLeft="@drawable/selector_chat_keyboard_voice"
            android:drawableStart="@drawable/selector_chat_keyboard_voice" />

        <RelativeLayout
            android:id="@+id/keyboard_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/more_fun_layout"
            android:layout_toRightOf="@+id/tv_voice_keyboard">

            <View
                android:id="@+id/view_edit_bg"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/et_chat_message"
                android:background="@drawable/selector_chat_edit_line_bg" />

            <com.caijia.qimdemo.widget.EmoticonEditText
                android:id="@+id/et_chat_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_chat_emoticon"
                android:background="@null"
                android:maxLines="5"
                android:minHeight="32dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="3dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_chat_emoticon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/et_chat_message"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="5dp"
                android:background="@null"
                android:button="@null"
                android:drawableLeft="@drawable/selector_chat_face"
                android:drawableStart="@drawable/selector_chat_face" />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_voice"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignTop="@+id/tv_voice_keyboard"
            android:layout_marginTop="-2dp"
            android:layout_toLeftOf="@+id/more_fun_layout"
            android:layout_toRightOf="@+id/tv_voice_keyboard"
            android:background="@drawable/selector_voice_bg"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/more_fun_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/keyboard_layout"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true">

            <ImageButton
                android:id="@+id/btn_chat_more_function"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:src="@drawable/selector_chat_more_function" />

            <TextView
                android:id="@+id/btn_chat_send"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_centerInParent="true"
                android:layout_alignTop="@+id/btn_chat_more_function"
                android:background="@drawable/selector_chat_send_button_bg"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/send"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/tv_voice_keyboard"
            android:layout_marginTop="9dp" />

    </RelativeLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/chat_tool_bar_layout"
        android:background="@android:color/darker_gray" />

    <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider_line"
        android:background="@android:color/white"/>
</merge>